@namespace BlazorMdc.Demo

@page "/progress"

<h1 class="mdc-typography--headline4">Progress samples</h1>

<p style="margin-bottom: 2rem;">See <code>ProgressSample.razor</code> for sources.</p>

<p><MdcSwitch @bind-Value="@show" Label="Show bars" /></p>
<p><MdcSwitch @bind-Value="@showBuffer" Label="Show buffer" /></p>

<h5 class="mdc-typography--headline5">Indeterminate Linear Progress</h5>
<p><MdcLinearProgress LinearProgressType="@indeterminate" /></p>


<h5 class="mdc-typography--headline5">Determinate Linear Progress</h5>
<PMdcNumericDoubleField @bind-Value="@progress" Label="Progress (0 to 100%)" Min="0" Max="1" Magnitude="MdcNumericInputMagnitude.Percent" DecimalPlaces="2" NumericFormat="P0" />

<p>Regular:</p>
<p><MdcLinearProgress LinearProgressType="determinate" Value="@progress" BufferValue="buffer" /></p>

<p>Reversed:</p>
<p><MdcLinearProgress LinearProgressType="reversed" Value="@progress" BufferValue="buffer" /></p>


@code {
    bool show = true;
    bool showBuffer = true;
    double progress = 0.2;
    double? buffer => showBuffer ? (double?)progress + (1 - progress) / 3 : null;
    MdcLinearProgressType indeterminate => show ? MdcLinearProgressType.Indeterminate : MdcLinearProgressType.Closed;
    MdcLinearProgressType determinate => show ? MdcLinearProgressType.Determinate : MdcLinearProgressType.Closed;
    MdcLinearProgressType reversed => show ? MdcLinearProgressType.ReversedDeterminate : MdcLinearProgressType.Closed;
}