<MdcTextField Value="@InternalStringValue"
              ValueChanged="InternalStringValueChangedEventHandler"
              ValueExpression="@( () => InternalStringValue )"
              Label="@Label"
              LeadingIcon="@LeadingIcon"
              OnFocus="@OnFocus"
              TrailingIcon="@TrailingIcon"
              Type="@Type" />

@code{
    [Parameter] public string Label { get; set; } = "";
    [Parameter] public string? LeadingIcon { get; set; }
    [Parameter] public EventCallback<FocusEventArgs> OnFocus { get; set; }
    [Parameter] public string? TrailingIcon { get; set; }
    [Parameter] public string Type { get; set; } = "text";
    [Parameter] public EventCallback<string> StringValueChanged { get; set; }
    [Parameter]
    public string StringValue
    {
        get
        {
            return InternalStringValue;
        }
        set
        {
            InternalStringValue = value;
            StringValueChanged.InvokeAsync(InternalStringValue);
        }
    }

    protected string InternalStringValue { get; set; }

    public void InternalStringValueChangedEventHandler(string s)
    {
        StringValue = s;
    }

}
