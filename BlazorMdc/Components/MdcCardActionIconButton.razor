@namespace BlazorMdc

@inherits MdcComponentBase

<MdcIconButton Icon="@Icon"
               Type="@Type"
               Class="@myClass"
               OnClick="@OnClick"
               OnMouseDown="@OnMouseDown"
               OnKeyDown="@OnKeyDown"
               OnTouchStart="@OnTouchStart">
</MdcIconButton>


@code {
    [Parameter] public string Icon { get; set; }
    [Parameter] public string Type { get; set; } = "button";
    [Parameter] public EventCallback OnClick { get; set; }
    [Parameter] public EventCallback OnMouseDown { get; set; }
    [Parameter] public EventCallback OnKeyDown { get; set; }
    [Parameter] public EventCallback OnTouchStart { get; set; }


    private string myClass => $"{Class} mdc-card__action mdc-card__action--icon--unbounded";
}