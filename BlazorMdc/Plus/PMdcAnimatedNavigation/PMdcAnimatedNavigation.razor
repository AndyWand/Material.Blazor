@namespace BlazorMdc


@if (PMdcAnimatedNavigationManager.Configuration.ApplyAnimation)
{
    <style>
        .bmdc-navigation-fade-in {
            @FadeInAnimation
            @FadeInAnimationWebkit
        }

        .bmdc-navigation-fade-out {
            @FadeOutAnimation
            @FadeOutAnimationWebkit
        }
    </style>


    <div class="@PageClass">
        @ChildContent
    </div>
}
else
{
    @ChildContent
}