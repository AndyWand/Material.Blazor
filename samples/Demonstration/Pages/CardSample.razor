@page "/card"

<h1 class="@MdcTypography.Heading4">Card samples</h1>

<p>See <code>CardSample.razor</code> for sources.</p>

<style>
    .my-card {
        width: 350px;
        margin-bottom: 2rem;
    }
</style>

<MdcCard Class="my-card bmdc-basic-with-header" AutoStyled="true">
    <MdcCardPrimary>
        <h2 class="bmdc-card__title mdc-typography mdc-typography--headline6">Our Changing Planet</h2>
        <h3 class="bmdc-card__subtitle mdc-typography mdc-typography--subtitle2">by Kurt Wagner</h3>
    </MdcCardPrimary>

    <MdcCardPrimaryAction>
        <div class="mdc-card__media mdc-card__media--16-9 bmdc-card__media" style="background-image: url(&quot;https://material-components.github.io/material-components-web-catalog/static/media/photos/3x2/2.jpg&quot;);"></div>
        <div class="bmdc-card__secondary mdc-typography mdc-typography--body2">Visit ten places on our planet that are undergoing the biggest changes today.</div>
    </MdcCardPrimaryAction>

    <MdcCardActions>
        <MdcCardActionButtons>
            <MdcCardActionButton Label="Read" />
            <MdcCardActionButton Label="Bookmark" />
        </MdcCardActionButtons>
        <MdcCardActionIcons>
            <MdcCardActionIconButton Icon="share" />
            <MdcCardActionIconButton Icon="more_vert" />
        </MdcCardActionIcons>
    </MdcCardActions>
</MdcCard>

<MdcCard Class="my-card bmdc-basic-with-header" AutoStyled="true" CardStyle="MdcCardStyle.Outlined">
    <MdcCardPrimary>
        <h2 class="bmdc-card__title mdc-typography mdc-typography--headline6">Our Changing Planet</h2>
